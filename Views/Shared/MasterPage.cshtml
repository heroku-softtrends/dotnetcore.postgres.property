<script type="text/javascript">

    function setBusyLoaderVisibility(isShow) {
        //$("#divLoading img").attr('src', '/images/ajax-loader.gif')
        //document.getElementById("divLoading").style.display = isShow ? "block" : "none";
        //window.location.hash = "no-back-button";
        //window.location.hash = "Again-No-back-button";//again because google chrome don't insert first hash into history
        //window.onhashchange = function () { window.location.hash = "no-back-button"; }

        $("#myIframe").attr('src', '/images/ajax-loader.gif');
        document.getElementById("myIframe").style.display = isShow ? "block" : "none";
        document.getElementById("divLoading").style.display = isShow ? "block" : "none";
    }




    jQuery(document).ready(function () {

        $('ul.sub-menu a').on('click', function () {
            $('#loadTxt').html("Loading " + $(this).html() + " ...");
            setBusyLoaderVisibility(true);
        });

        $('ul.dropdown-menu a').on('click', function () {
            var urlarray = location.pathname.split('/');
            if (urlarray.length > 0)
                url = urlarray[2];

            if ($(this).html().toLowerCase().indexOf("log") < 0) {
                if (urlarray[2].toLowerCase() == "dashboard") {
                    $('#loadTxt').html("Loading " + url + " ...");
                }
                else {
                    $('#loadTxt').html("Loading " + urlarray[1] + " ...");
                }
                setBusyLoaderVisibility(true);

            }

        });

        $("div[class='ranges'] ul li[class !='active']").on('click', function () {
            console.log($("div[class='ranges'] ul li").html());
            var urlarray = location.pathname.split('/');
            if (urlarray.length > 0)
                url = urlarray[2];

            if ($(this).html().toLowerCase().indexOf("log") < 0) {
                if (urlarray[2].toLowerCase() == "dashboard") {
                    $('#loadTxt').html("Loading " + url + " ...");
                }
                else {
                    $('#loadTxt').html("Loading " + urlarray[1] + " ...");
                }
                setBusyLoaderVisibility(true);

            }

        });


        App.init(); // initlayout and core plugins
        Index.init();
        //Index.initJQVMAP(); // init index page's custom scripts
        Index.initCalendar(); // init index page's custom scripts
        // Index.initCharts(); // init index page's custom scripts
        Index.initChat();
        // Index.initPieCharts();
        Index.initMiniCharts();
        Index.initDashboardDaterange();
        //Index.initIntro();
        Tasks.initDashboardWidget();
        setTimeout(function () {
            if ($("#sample_1_info") && $("#sample_1_info").html()) {
                if ($(".pagination").css("visibility") == "visible") {
                    setBusyLoaderVisibility(false);
                }
            }
            else if ($("#sample_editable_1_info") && $("#sample_editable_1_info").html()) {
                if ($(".pagination").css("visibility") == "visible") {
                    setBusyLoaderVisibility(false);
                }
            }
            else if ($("#sample_editable_2_info") && $("#sample_editable_2_info").html()) {
                if ($(".pagination").css("visibility") == "visible") {
                    setBusyLoaderVisibility(false);
                }
            }
            else if ($("#sample_editable_3_info") && $("#sample_editable_3_info").html()) {
                if ($(".pagination").css("visibility") == "visible") {
                    setBusyLoaderVisibility(false);
                }
            }
            else {
                setBusyLoaderVisibility(false);
            }
        }, 0);
    });
  
    function deleteconfirm() {
        if (confirm("Are you sure you want to delete?"))
            return true;
        else
            return false;
    }
    function subscribeconfirm() {
        if (confirm("Do you want to Subscribe User ?"))
            return true;
        else
            return false;
    }
    function Unsubscribeconfirm() {
        if (confirm("Do you want to UnSubscribe User ?"))
            return true;
        else
            return false;
    }
</script>